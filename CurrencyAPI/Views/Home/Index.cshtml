@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<CurrencyAPI.Models.Entities.Currency>
<h1>
    Currency Dashboard
</h1>
<body>
   
        <a asp-action="Update" asp-controller="Home" value="Update" type="submit">
            SHOW TABLE
        </a>
    
    <div>
        <table border="1" class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Date
                    </th>
                    <th>
                        Value
                    </th>

                </tr>
            </thead>
            <tbody id="tablebody">
                @foreach (var item in Model)
                {


                    {
                        <tr>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                @item.CurrentDatTime.ToString("dd/MM/yyyy")
                            </td>
                            <td>
                                @item.Value
                            </td>

                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    }
</body>